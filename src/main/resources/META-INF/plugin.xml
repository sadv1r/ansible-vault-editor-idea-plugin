<idea-plugin>
    <id>ru.sadv1r.ansible-vault-editor-idea-plugin</id>
    <name>Ansible Vault Editor</name>
    <vendor email="sadv12@gmail.com" url="http://sadv1r.ru">Sadv1r</vendor>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileType name="Ansible Vault File" implementationClass="ru.sadv1r.idea.plugin.ansible.vault.language.AnsibleVaultFileType"
                  fieldName="INSTANCE" extensions="yml"/>
        <lang.parserDefinition language="Ansible Vault"
                               implementationClass="ru.sadv1r.idea.plugin.ansible.vault.language.AnsibleVaultParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Ansible Vault"
                                       implementationClass="ru.sadv1r.idea.plugin.ansible.vault.language.AnsibleVaultSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="ru.sadv1r.idea.plugin.ansible.vault.language.AnsibleVaultColorSettingsPage"/>
        <lang.foldingBuilder language="Ansible Vault"
                             implementationClass="ru.sadv1r.idea.plugin.ansible.vault.language.AnsibleVaultFoldingBuilder"/>
        <lang.foldingBuilder language="TEXT"
                                 implementationClass="ru.sadv1r.idea.plugin.ansible.vault.language.AnsibleVaultFoldingBuilder"/>
        </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="ru.sadv1r.idea.plugin.ansible.vault.editor.VaultModifyAction"
                class="ru.sadv1r.idea.plugin.ansible.vault.editor.VaultModifyAction"
                text="Ansible Vault Editor"
                icon="AnsibleVaultEditorIcons.ANSIBLE_ICON">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>